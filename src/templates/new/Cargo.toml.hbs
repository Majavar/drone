[[bin]]
name = "{{crate_name}}"
path = "src/bin.rs"
test = false
doc = false

[features]
default = []
std = ["drone-core/std", "drone-cortex-m/std", "futures-preview/std"]
heaptrace = []

[dependencies]
core = { version = "0.10.0", package = "libcore-drone" }
drone-core = { version = "0.10.0" }
drone-cortex-m = { version = "0.10.0"{{#each drone-cortex-m-features}}{{#if @first}}, features = [{{/if}}"{{this}}"{{#if @last}}]{{else}}, {{/if}}{{/each}} }
drone-stm32-map = { version = "0.10.0"{{#each drone-stm32-map-features}}{{#if @first}}, features = [{{/if}}"{{this}}"{{#if @last}}]{{else}}, {{/if}}{{/each}} }
futures-preview = { version = "0.3.0-alpha", default-features = false }

[profile.release]
lto = true
panic = "abort"
